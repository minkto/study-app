generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Statuses {
  status_id Int        @id @unique
  name      String
  chapter   Chapters[]

  @@map("statuses")
}

model Categories {
  category_id Int         @id @default(autoincrement())
  name        String
  description String?     @db.VarChar(256)
  resource    Resources[]
  user_id     Int
  users       Users       @relation(fields: [user_id], references: [user_id])
  created_at DateTime @db.Timestamptz(6)
  updated_at DateTime @db.Timestamptz(6)

  @@map("categories")
}

model Resources {
  resource_id  Int         @id @default(autoincrement())
  user_id      String
  name         String
  description  String?
  category_id  Int?
  categories   Categories? @relation(fields: [category_id], references: [category_id])
  date_created DateTime    @default(now())
  chapters     Chapters[]
  is_pinned    Boolean     @default(false)

  @@map("resources")
}

model Chapters {
  chapter_id              Int       @id @default(autoincrement())
  resource_id             Int
  status_id               Int @default(0)
  name                    String
  url                     String?   @db.VarChar(800)
  original_date_completed DateTime?
  last_date_completed     DateTime?
  resource                Resources @relation(fields: [resource_id], references: [resource_id])
  status                  Statuses @relation(fields: [status_id], references: [status_id])

  @@map("chapters")
}

model Users {
  user_id       Int           @id @default(autoincrement())
  clerk_user_id String        @unique
  categories    Categories[]
  user_settings UserSettings?

  @@map("users")
}

model UserSettings {
  user_setting_id                       Int   @id @default(autoincrement())
  user_id                               Int   @unique
  user                                  Users @relation(fields: [user_id], references: [user_id])
  ai_helper_credits                     Int   @default(0)
  global_chapter_days_before_review_due Int   @default(30)

  @@map("user_settings")
}
